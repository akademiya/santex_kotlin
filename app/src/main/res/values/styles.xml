<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/toolbar_color</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--<style name="Toolbar" parent="AppTheme">-->
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:layout_height">@dimen/toolbar_height</item>-->
        <!--<item name="android:background">@color/colorPrimary</item>-->
    <!--</style>-->

    <style name="BaseTextStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseTextStyle.Title">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="HorizontalViewDivider" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:color">@color/divider_color</item>
    </style>

</resources>
